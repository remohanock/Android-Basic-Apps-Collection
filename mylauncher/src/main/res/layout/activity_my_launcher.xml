<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_dark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.remo.mylauncher.MyLauncher">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


            <ImageButton
                android:id="@+id/ibFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@android:color/transparent"
                android:src="@drawable/torch_2"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Flash"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:layout_gravity="center" />


            <ImageButton
                android:id="@+id/ibCompass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="@android:color/transparent"
                android:src="@drawable/compass_2" />

            <TextView
                android:id="@+id/tvCompass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="Compass"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibUnitConverter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@android:color/transparent"
                android:src="@drawable/unit_converter" />

            <TextView
                android:id="@+id/tvUnitConverter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="3"
                android:layout_marginBottom="10dp"
                android:text="Unit Converter"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:background="@android:color/transparent"
                android:src="@drawable/weather" />

            <TextView
                android:id="@+id/tvWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:layout_marginBottom="10dp"
                android:text="Weather"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibWalkIndia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:background="@android:color/transparent"
                android:src="@drawable/steps" />

            <TextView
                android:id="@+id/tvWalkIndia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="5"
                android:layout_marginBottom="10dp"
                android:text="Walk India"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibCalibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="4"
                android:background="@android:color/transparent"
                android:src="@drawable/calibrator" />

            <TextView
                android:id="@+id/tvCalibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="5"
                android:layout_marginBottom="10dp"
                android:text="Calibrator"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@android:color/transparent"
                android:src="@drawable/calculator" />

            <ImageButton
                android:id="@+id/ibQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="6"
                android:background="@android:color/transparent"
                android:src="@drawable/qr_scanner" />

            <TextView
                android:id="@+id/tvCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="7"
                android:layout_marginBottom="10dp"
                android:text="Calculator"
                android:textAppearance="?android:attr/textAppearance" />

            <TextView
                android:id="@+id/tvQrScanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="7"
                android:text="QR Scanner"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibAppLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:background="@android:color/transparent"
                android:src="@drawable/app_lock" />

            <ImageButton
                android:id="@+id/ibSmsBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="8"
                android:background="@android:color/transparent"
                android:src="@drawable/sms_backup" />

            <TextView
                android:id="@+id/tvAppLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="9"
                android:layout_marginBottom="10dp"
                android:text="App Lock"
                android:textAppearance="?android:attr/textAppearance" />

            <TextView
                android:id="@+id/tvSmsBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="9"
                android:layout_marginBottom="10dp"
                android:text="SMS Backup"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibVoiceRecorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="10"
                android:background="@android:color/transparent"
                android:src="@drawable/voice_recorder" />

            <ImageButton
                android:id="@+id/ibZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="10"
                android:background="@android:color/transparent"
                android:src="@drawable/zip" />

            <TextView
                android:id="@+id/tvVoiceRecorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="11"
                android:layout_marginBottom="10dp"
                android:text="Voice Recorder"
                android:textAppearance="?android:attr/textAppearance" />

            <TextView
                android:id="@+id/tvZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="11"
                android:text="Zip"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearance" />

            <ImageButton
                android:id="@+id/ibSpeedCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="12"
                android:background="@android:color/transparent"
                android:src="@drawable/speed" />

            <TextView
                android:id="@+id/tvSpeedCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="13"
                android:layout_marginBottom="10dp"
                android:text="Speed Calculator"
                android:textAppearance="?android:attr/textAppearance" />

        </GridLayout>
    </ScrollView>

</RelativeLayout>
